{
  "name": "host",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:tsc": "tsc --noEmit",
    "type-check": "tsc --noEmit --watch",
    "build:start": "cd dist && PORT=3000 npx serve",
    "start": "webpack serve --mode development",
    "start:live": "webpack serve --open --mode development --live-reload --hot",
    "github2": "ng build --configuration production --base-href=/mf-colorpicker-host/ && npx angular-cli-ghpages --dir=dist/mf-colorpicker-host --branch=gh-pages",
    "github": "npm run build && gh-pages -d dist -b gh-pages",
    "lint": "eslint src --ext .ts,.tsx",
    "prebuild": "npm run build:tsc"
  },
  "license": "MIT",
  "author": {
    "name": "Jack Herrington",
    "email": "jherr@pobox.com"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.0",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.26.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "gh-pages": "^6.3.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.49",
    "postcss-loader": "^7.3.4",
    "style-loader": "^4.0.0",
    "typescript": "^5.9.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "jquery": "^3.7.1",
    "popper.js": "^1.16.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.9.6"
  }
